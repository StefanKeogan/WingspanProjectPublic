                        <!--button at the bottom -->
                        <Button x:Name="thisSponsorButton"
                                Grid.Row="7"
                                Grid.ColumnSpan="2"
                                HorizontalOptions="Center"
                                Text="Sponsor" 
                                BackgroundColor="#FFD966"
                                BorderColor="#5C3838"
                                BorderWidth="3"
                                CornerRadius="5"
                                FontSize="20" 
                                Margin="20,0"
                                WidthRequest="150"
                                Clicked="ThisSponsorButton_Clicked"/>

                        </Grid>
                    </FlexLayout>
                </ScrollView>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>