<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="WingspanPrototype1.View.EditSponsorResultsDesktop"
             Title="Results">
    <ContentPage.Content>
            <StackLayout>
                <Grid VerticalOptions="FillAndExpand">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="6*"/>
                </Grid.ColumnDefinitions>

                <!--list of search results-->
                <ListView x:Name="resultsListView" BackgroundColor="#F0F0F0" VerticalOptions="Fill" ItemSelected="ResultsListView_ItemSelected">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout Orientation="Horizontal" Padding="5">
                                    <Label FontSize="20" Text="{Binding SponsorID}"/>
                                    <Label FontSize="20" Text="{Binding SponsorName}"/>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!--the grid to display the sponsor details-->
                <ScrollView Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Center">
                    <Grid x:Name="editSponsorResultsGrid" IsVisible="False" HeightRequest="500" HorizontalOptions="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="3.5*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="2*"/>
                        </Grid.RowDefinitions>

                        <!--Sponsor ID-->
                        <Label x:Name="sponsorIDLabel" Text="Sponsor ID" Style="{StaticResource resultLabelStyle}"/>
                        <StackLayout x:Name="sponsorIDStack" Style="{StaticResource resultStackStyle}" IsVisible="False">
                            <Label x:Name="sponsorIDValueLabel" FontSize="20"/>
                            <Button x:Name="sponsorIDEditButton" Text="[edit]" BackgroundColor="#FFFFFF" TextColor="#5C3838" FontSize="15" VerticalOptions="Center"/>
                        </StackLayout>
                        <Entry x:Name="sponsorIDEntry" Style="{StaticResource feildStyle}" IsVisible="False"/>

                        <!--Sponsor name-->
                        <Label x:Name="sponsorNameLabel" Text="Name" Style="{StaticResource resultLabelStyle}" Grid.Row="1"/>
                        <StackLayout x:Name="sponsorNameStack" Style="{StaticResource resultStackStyle}" IsVisible="False" Grid.Row="1">
                            <Label x:Name="sponsorNameValueLabel" FontSize="20"/>
                            <Button x:Name="sponsorNameEditButton" Text="[edit]" BackgroundColor="#FFFFFF" TextColor="#5C3838" FontSize="15" VerticalOptions="Center"/>
                        </StackLayout>
                        <Entry x:Name="sponsorNameEntry" Style="{StaticResource feildStyle}" IsVisible="False" Grid.Row="1"/>

                        <!--Sponsor address-->
                        <Label x:Name="sponsorAddressLabel" Text="Address" Style="{StaticResource resultLabelStyle}" Grid.Row="2"/>
                        <StackLayout x:Name="sponsorAddressStack" Style="{StaticResource resultStackStyle}" IsVisible="False" Grid.Row="2">
                            <Label x:Name="sponsorAddressValueLabel" FontSize="20"/>
                            <Button x:Name="sponsorAddressEditButton" Text="[edit]" BackgroundColor="#FFFFFF" TextColor="#5C3838" FontSize="15" VerticalOptions="Center"/>
                        </StackLayout>
                        <Entry x:Name="sponsorAddressEntry" Style="{StaticResource feildStyle}" IsVisible="False" Grid.Row="2"/>

                        <!--Sponsor phone number-->
                        <Label x:Name="sponsorPhoneLabel" Text="Phone" Style="{StaticResource resultLabelStyle}" Grid.Row="3"/>
                        <StackLayout x:Name="sponsorPhoneStack" Style="{StaticResource resultStackStyle}" IsVisible="False" Grid.Row="3">
                            <Label x:Name="sponsorPhoneValueLabel" FontSize="20"/>
                            <Button x:Name="sponsorPhoneEditButton" Text="[edit]" BackgroundColor="#FFFFFF" TextColor="#5C3838" FontSize="15" VerticalOptions="Center"/>
                        </StackLayout>
                        <Entry x:Name="sponsorPhoneEntry" Style="{StaticResource feildStyle}" IsVisible="False" Grid.Row="3"/>

                        <!--Sponsor email-->
                        <Label x:Name="sponsorEmailLabel" Text="Email" Style="{StaticResource resultLabelStyle}" Grid.Row="4"/>
                        <StackLayout x:Name="sponsorEmailStack" Style="{StaticResource resultStackStyle}" IsVisible="False" Grid.Row="4">
                            <Label x:Name="sponsorEmailValueLabel" FontSize="20"/>
                            <Button x:Name="sponsorEmailEditButton" Text="[edit]" BackgroundColor="#FFFFFF" TextColor="#5C3838" FontSize="15" VerticalOptions="Center"/>
                        </StackLayout>
                        <Entry x:Name="sponsorEmailEntry" Style="{StaticResource feildStyle}" IsVisible="False" Grid.Row="4"/>

                        <!--Sponsor notes-->
                        <Label x:Name="sponsorNotesLabel" Text="Notes" Style="{StaticResource resultLabelStyle}" Grid.Row="5"/>
                        <Label x:Name="sponsorNotesValueLabel" FontSize="20" IsVisible="False" Grid.Row="5"/>


                        <!--buttons at the bottom-->
                        <StackLayout Orientation="Horizontal" Grid.Row="6" Grid.ColumnSpan="2">
                            <Button x:Name="deleteSponsorButton" 
                                    Text="Delete" 
                                    Style="{StaticResource mainButtonStyle}" 
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    WidthRequest="150"
                                    Clicked="DeleteSponsorButton_Clicked"/>

                            <Button x:Name="saveSponsorChangesButton"
                                    Text="Save changes" 
                                    Style="{StaticResource mainButtonStyle}" 
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    WidthRequest="150"
                                    Clicked="SaveSponsorChangesButton_Clicked"/>

                            <Button x:Name="addSponsorNoteButton"
                                    Text="Add note" 
                                    Style="{StaticResource mainButtonStyle}" 
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    WidthRequest="150"
                                    Clicked="AddSponsorNoteButton_Clicked"/>

                        </StackLayout>
                    </Grid>
                </ScrollView>



                    <!--Add note pop-up box-->
                    <ContentView x:Name="addSponsorNoteView" Grid.Column="1" IsVisible="False" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                        <ContentView.Content>
                                <Frame BorderColor="#000000" Padding="3" Margin="20,20,20,20" BackgroundColor="#FFFFFF">
                                    <FlexLayout BackgroundColor="#FFFFFF" Direction="Column" WidthRequest="350" HeightRequest="350">
                                        <StackLayout BackgroundColor="#5C3838" Orientation="Horizontal">
                                            <Label Text="New note" TextColor="#FFFFFF"  FontSize="20" Margin="5,5,5,5" HorizontalOptions="Center" VerticalOptions="Center"/>
                                            <Button x:Name="addSponsorNoteExitButton" 
                                            Text="X" TextColor="#FFFFFF"  
                                            FontSize="20" 
                                            Margin="5,5,5,5" 
                                            HorizontalOptions="EndAndExpand" 
                                            VerticalOptions="Center" 
                                            Clicked="AddSponsorNoteExitButton_Clicked"/>
                                        </StackLayout>
                                        <StackLayout Margin="5,5,5,5">
                                            <Label Text="Date" FontSize="20"/>
                                            <DatePicker x:Name="sponsorNoteDatePicker"/>

                                            <Label Text="Note" FontSize="20"/>
                                            <Editor x:Name="sponsorNoteEntry" 
                                                    AutoSize="TextChanges" 
                                                    HeightRequest="100"
                                                    HorizontalOptions="FillAndExpand" 
                                                    VerticalOptions="FillAndExpand" 
                                                    MaxLength="350"/>

                                            <Button x:Name="saveSponsorNoteButton"
                                            Text="Save" 
                                            Margin="0,20"
                                            Style="{StaticResource mainButtonStyle}" 
                                            WidthRequest="150"
                                            HorizontalOptions="Center"
                                            Clicked="SaveSponsorNoteButton_Clicked"/>
                                        </StackLayout>
                                    </FlexLayout>
                                </Frame>
                        </ContentView.Content>
                    </ContentView>

                </Grid>
            </StackLayout>
    </ContentPage.Content>
</ContentPage>