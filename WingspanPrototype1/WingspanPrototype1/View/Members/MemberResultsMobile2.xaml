<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="WingspanPrototype1.View.MemberResultsMobile2"
             Title="Results"
             BackgroundColor="#F0F0F0">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Grid Margin="5,5,5,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <!--First Name-->
                    <Label x:Name="memberFirstNameLabel" Text="First Name" FontSize="20"/>
                    <StackLayout x:Name="memberFirstNameStack" Orientation="Horizontal" IsVisible="False" Grid.Column="1">
                        <Label x:Name="memberFirstNameValueLabel" FontSize="20"/>
                        <Button x:Name="memberFirstNameEditButton" Text="[edit]" BackgroundColor="#F0F0F0" TextColor="#5C3838" FontSize="15" VerticalOptions="Center" Clicked="memberFirstNameEditButton_Clicked"/>
                    </StackLayout>
                    <Entry x:Name="memberFirstNameEntry" HorizontalOptions="Fill" VerticalOptions="Center" Grid.Column="1" IsVisible="False"/>


                    <!--Last Name-->
                    <Label x:Name="memberLastNameLabel" Text="Last Name" FontSize="20" Grid.Row="1"/>
                    <StackLayout x:Name="memberLastNameStack" Orientation="Horizontal"  IsVisible="False" Grid.Row="1" Grid.Column="1">
                        <Label x:Name="memberLastNameValueLabel" FontSize="20"/>
                        <Button x:Name="memberLastNameEditButton" Text="[edit]" BackgroundColor="#F0F0F0" TextColor="#5C3838" FontSize="15" VerticalOptions="Center" Clicked="memberLastNameEditButton_Clicked"/>
                    </StackLayout>
                    <Entry x:Name="memberLastNameEntry" HorizontalOptions="Fill" VerticalOptions="Center" Grid.Row="1" Grid.Column="1" IsVisible="False"/>

                    <!--Salutation Name-->
                    <Label x:Name="memberSalutationLabel" Text="Salutation Name" FontSize="20" Grid.Row="2"/>
                    <StackLayout x:Name="memberSalutationStack" Orientation="Horizontal" Grid.Row="2" Grid.Column="1" IsVisible="False">
                        <Label x:Name="memberSalutationValueLabel" FontSize="20"/>
                        <Button x:Name="memberSalutationEditButton" Text="[edit]" BackgroundColor="#F0F0F0" TextColor="#5C3838" FontSize="15" VerticalOptions="Center" Clicked="memberSalutationEditButton_Clicked"/>
                    </StackLayout>
                    <Entry x:Name="memberSalutationEntry" HorizontalOptions="Fill" VerticalOptions="Center" Grid.Row="2" Grid.Column="1" IsVisible="False"/>

                    <!--Email-->
                    <Label x:Name="memberEmailLabel" Text="Email" FontSize="20" Grid.Row="3"/>
                    <StackLayout x:Name="memberEmailStack" Orientation="Horizontal" Grid.Row="3" Grid.Column="1" IsVisible="False">
                        <Label x:Name="memberEmailValueLabel" FontSize="20"/>
                        <Button x:Name="memberEmailEditButton" Text="[edit]" BackgroundColor="#F0F0F0" TextColor="#5C3838" FontSize="15" VerticalOptions="Center" Clicked="memberEmailEditButton_Clicked"/>
                    </StackLayout>
                    <Entry x:Name="memberEmailEntry" HorizontalOptions="Fill" VerticalOptions="Center" Grid.Row="3" Grid.Column="1" IsVisible="False"/>

                    <!--Company-->
                    <Label x:Name="memberCompanyLabel" Text="Company" FontSize="20" Grid.Row="4"/>
                    <StackLayout x:Name="memberCompanyStack" Orientation="Horizontal" Grid.Row="4" Grid.Column="1" IsVisible="False">
                        <Label x:Name="memberCompanyValueLabel" FontSize="20" />
                        <Button x:Name="memberCompanyEditButton" Text="[edit]" BackgroundColor="#F0F0F0" TextColor="#5C3838" FontSize="15" VerticalOptions="Center" Clicked="memberCompanyEditButton_Clicked"/>
                    </StackLayout>
                    <Entry x:Name="memberCompanyEntry" HorizontalOptions="Fill" VerticalOptions="Center" Grid.Row="4" Grid.Column="1" IsVisible="False"/>

                    <!--Address 1-->
                    <Label x:Name="memberAddress1Label" Text="Address 1" FontSize="20" Grid.Row="5"/>
                    <StackLayout x:Name="memberAddress1Stack" Orientation="Horizontal" Grid.Row="5" Grid.Column="1" IsVisible="False">
                        <Label x:Name="memberAddress1ValueLabel" FontSize="20"/>
                        <Button x:Name="memberAddress1Button" Text="[edit]" BackgroundColor="#F0F0F0" TextColor="#5C3838" FontSize="15" VerticalOptions="Center" Clicked="memberAddress1Button_Clicked"/>
                    </StackLayout>
                    <Entry x:Name="memberAddress1Entry" HorizontalOptions="Fill" VerticalOptions="Center" Grid.Row="5" Grid.Column="1" IsVisible="False"/>

                    <!--Address 2-->
                    <Label x:Name="memberAddress2Label" Text="Address 2" FontSize="20" Grid.Row="6"/>
                    <StackLayout x:Name="memberAddress2Stack" Orientation="Horizontal" Grid.Row="6" Grid.Column="1" IsVisible="False">
                        <Label x:Name="memberAddress2ValueLabel" FontSize="20"/>
                        <Button x:Name="memberAddress2Button" Text="[edit]" BackgroundColor="#F0F0F0" TextColor="#5C3838" FontSize="15" VerticalOptions="Center" Clicked="memberAddress2Button_Clicked"/>
                    </StackLayout>
                    <Entry x:Name="memberAddress2Entry" HorizontalOptions="Fill" VerticalOptions="Center" Grid.Row="6" Grid.Column="1" IsVisible="False"/>

                    <!--Address 3-->
                    <Label x:Name="memberAddress3Label" Text="Address 3" FontSize="20" Grid.Row="7"/>
                    <StackLayout x:Name="memberAddress3Stack" Orientation="Horizontal" Grid.Row="7" Grid.Column="1" IsVisible="False">
                        <Label x:Name="memberAddress3ValueLabel" FontSize="20"/>
                        <Button x:Name="memberAddress3Button" Text="[edit]" BackgroundColor="#F0F0F0" TextColor="#5C3838" FontSize="15" VerticalOptions="Center" Clicked="memberAddress3Button_Clicked"/>
                    </StackLayout>
                    <Entry x:Name="memberAddress3Entry" HorizontalOptions="Fill" VerticalOptions="Center" Grid.Row="7" Grid.Column="1" IsVisible="False"/>

                    <!--City-->
                    <Label x:Name="memberCityLabel" Text="City" FontSize="20" Grid.Row="8"/>
                    <StackLayout x:Name="memberCityStack" Orientation="Horizontal" Grid.Row="8" Grid.Column="1" IsVisible="False">
                        <Label x:Name="memberCityValueLabel" FontSize="20"/>
                        <Button x:Name="memberCItyEditButton" Text="[edit]" BackgroundColor="#F0F0F0" TextColor="#5C3838" FontSize="15" VerticalOptions="Center" Clicked="memberCityEditButton_Clicked"/>
                    </StackLayout>
                    <Entry x:Name="memberCityEntry" Grid.Row="8" IsVisible="False" Grid.Column="1"/>

                    <!--Post Code-->
                    <Label x:Name="memberPostCodeLabel" Text="Post Code" FontSize="20" Grid.Row="9"/>
                    <StackLayout x:Name="memberPostCodeStack" Grid.Row="9" Grid.Column="1" IsVisible="False" Orientation="Horizontal">
                        <Label x:Name="memberPostCodeValueLabel" FontSize="20" />
                        <Button x:Name="memberPostCodeEditButton" Text="[edit]" BackgroundColor="#F0F0F0" TextColor="#5C3838" FontSize="15" VerticalOptions="Center" Clicked="memberPostCodeEditButton_Clicked"/>
                    </StackLayout>
                    <Entry x:Name="memberPostCodeEntry" HorizontalOptions="Fill" VerticalOptions="Center" Grid.Row="9" Grid.Column="1" IsVisible="False"/>

                    <!--Country-->
                    <Label x:Name="memberCountryLabel" Text="Country" FontSize="20" Grid.Row="10"/>
                    <StackLayout x:Name="memberCountryStack" Grid.Row="10" Grid.Column="1" IsVisible="False" Orientation="Horizontal">
                        <Label x:Name="memberCountryValueLabel" FontSize="20" />
                        <Button x:Name="memberCountryEditButton" Text="[edit]" BackgroundColor="#F0F0F0" TextColor="#5C3838" FontSize="15" VerticalOptions="Center" Clicked="memberCountryEditButton_Clicked"/>
                    </StackLayout>
                    <Entry x:Name="memberCountryEntry" HorizontalOptions="Fill" VerticalOptions="Center" Grid.Row="10" Grid.Column="1" IsVisible="False"/>

                    <!--Comment-->
                    <Label x:Name="memberCommentLabel" Text="Comment" FontSize="20" Grid.Row="11"/>
                    <StackLayout x:Name="memberCommentStack" Grid.Row="11" Grid.Column="1" IsVisible="False" Orientation="Horizontal">
                        <Label x:Name="memberCommentValueLabel" FontSize="20" />
                        <Button x:Name="memberCommentValueEditButton" Text="[edit]" BackgroundColor="#F0F0F0" TextColor="#5C3838" FontSize="15" VerticalOptions="Center" Clicked="memberCommentValueEditButton_Clicked"/>
                    </StackLayout>
                    <Editor x:Name="memberCommentEditor" HorizontalOptions="Fill" VerticalOptions="Center" Grid.Row="11" Grid.Column="1" IsVisible="False"/>

                    <!--Join Date-->
                    <Label x:Name="memberJoinDateLabel" Text="Join Date" FontSize="20" Grid.Row="12"/>
                    <StackLayout x:Name="memberJoinDateStack" Grid.Row="12" Grid.Column="1" IsVisible="False" Orientation="Horizontal">
                        <Label x:Name="memberJoinDateValueLabel" FontSize="20" />
                        <Button x:Name="memberJoinDateEditButton" Text="[edit]" BackgroundColor="#F0F0F0" TextColor="#5C3838" FontSize="15" VerticalOptions="Center" Clicked="memberJoinDateEditButton_Clicked"/>
                    </StackLayout>
                    <DatePicker x:Name="memberJoinDatePicker" HorizontalOptions="Fill" VerticalOptions="Center" Grid.Row="12" Grid.Column="1" IsVisible="False"/>

                    <!--Donation History-->
                    <ContentView x:Name="paymentHistoryView" IsVisible="False" HorizontalOptions="Center" VerticalOptions="Center" MinimumHeightRequest="300" Grid.Row="6" Grid.RowSpan="7" Grid.ColumnSpan="2">
                        <ContentView.Content>
                            <Frame BorderColor="#000000" Padding="3" BackgroundColor="#FFFFFF">
                                <StackLayout BackgroundColor="#FFFFFF" >
                                    <StackLayout BackgroundColor="#5C3838" Orientation="Horizontal">
                                        <Label Text="Payment History" TextColor="#FFFFFF" BackgroundColor="#5C3838" FontSize="20" Margin="5,5,5,5" HorizontalOptions="Center" VerticalOptions="Center"/>
                                        <Button x:Name="paymentExitButton"  Style="{StaticResource exitStyle}" Clicked="PaymentExitButton_Clicked"/>
                                    </StackLayout>
                                    <ListView x:Name="paymentListView" ItemSelected="PaymentListView_ItemSelected">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <ViewCell>
                                                    <StackLayout Orientation="Horizontal" Margin="5,10,5,10">
                                                        <Label Text="Date" Margin="20,0,0,0" FontAttributes="Bold" FontSize="15"/>
                                                        <Label Text="{Binding Date}" FontAttributes="Italic" FontSize="15"/>
                                                        <Label Text="Category" Margin="20,0,0,0" FontAttributes="Bold" FontSize="15"/>
                                                        <Label Text="{Binding Amount}" FontAttributes="Italic" FontSize="15"/>
                                                    </StackLayout>
                                                </ViewCell>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                    <Button
                                    x:Name="addNewPaymentButton"
                                    Margin="5,5,5,5"
                                    Text="Add Donation" 
                                    Style="{StaticResource mainButtonStyle}"
                                    HorizontalOptions="Center"
                                    Clicked="AddNewPaymentButton_Clicked"/>
                                </StackLayout>
                            </Frame>
                        </ContentView.Content>
                    </ContentView>

                    <!--Add Payment-->
                    <ContentView x:Name="addNewPaymentView" IsVisible="False" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" WidthRequest="600" Grid.Row="6" Grid.RowSpan="7" Grid.ColumnSpan="2">
                        <ContentView.Content>
                            <Frame BorderColor="#000000" Padding="3" Margin="5,5,5,5" BackgroundColor="#FFFFFF">
                                <StackLayout BackgroundColor="#FFFFFF">
                                    <StackLayout BackgroundColor="#5C3838" Orientation="Horizontal">
                                        <Label Text="Add Payment" TextColor="#FFFFFF"  FontSize="20" Margin="5,5,5,5" HorizontalOptions="Center" VerticalOptions="Center"/>
                                        <Button x:Name="addNewPaymentExitButton"  Style="{StaticResource exitStyle}" Clicked="AddNewPaymentExitButton_Clicked"/>
                                    </StackLayout>
                                    <Label Text="Date" FontSize="20" Margin="5,5,5,5"/>
                                    <DatePicker x:Name="paymentDatePicker" Margin="5,5,5,5"/>

                                    <Label Text="Amount" FontSize="20" Margin="5,5,5,5"/>
                                    <Entry x:Name="paymentAmountEntry" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="5,5,5,5"/>

                                    <Button
                                        x:Name="addPaymentButton"
                                        Margin="5,5,5,5"
                                        Text="Add" 
                                        Style="{StaticResource mainButtonStyle}"
                                        HorizontalOptions="Center"
                                        Clicked="AddPaymentButton_Clicked"/>
                                </StackLayout>
                            </Frame>
                        </ContentView.Content>
                    </ContentView>

                </Grid>

                <!--Buttons-->
                <StackLayout HorizontalOptions="CenterAndExpand" Orientation="Vertical" Margin="0,5">
                    <Button  
                         x:Name="deleteButton"
                         Grid.ColumnSpan="2" 
                         Text="Delete" 
                         Style="{StaticResource mainButtonStyle}"
                         HorizontalOptions="Center"
                         WidthRequest="150"
                         Clicked="DeleteButton_Clicked"/>

                    <Button  
                         x:Name="saveChangesButton"
                         Text="Save Changes" 
                         Style="{StaticResource mainButtonStyle}"
                         HorizontalOptions="Center"
                         WidthRequest="150"
                         Clicked="SaveChangesButton_Clicked"/>

                    <Button  
                         x:Name="paymentHistoryButton"
                         Text="Payment History" 
                         Style="{StaticResource mainButtonStyle}"
                         HorizontalOptions="Center"
                         WidthRequest="150"
                         Clicked="PaymentButton_Clicked"/>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>