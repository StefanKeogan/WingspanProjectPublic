<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="WingspanPrototype1.View.EditSponsorshipResultsDesktop"
             Title="Sponsorship Search Results">
    <ContentPage.Content>
        <StackLayout>
            <Grid VerticalOptions="FillAndExpand">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="6*"/>
                </Grid.ColumnDefinitions>

                <!--list of search results-->
                <ListView x:Name="resultsListView" BackgroundColor="#F0F0F0" Grid.RowSpan="2" VerticalOptions="Fill" ItemSelected="ResultsListView_ItemSelected">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout Orientation="Horizontal" Padding="5">
                                    <Label FontSize="20" Text="{Binding WingspanId}"/>
                                    <Label FontSize="20" Text="{Binding SponsorName}"/>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!--grid to display sponsorship results-->
                <ScrollView Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Center">
                    <Grid x:Name="editSponsorshipResultsGrid" IsVisible="False" WidthRequest="500" HorizontalOptions="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="3.5*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="2*"/>
                        </Grid.RowDefinitions>


                        <!--Sponsorship ID-->
                        <Label x:Name="sponsorshipIDLabel" Text="Sponsorship ID" Style="{StaticResource resultLabelStyle}"/>
                        <StackLayout x:Name="sponsorshipIDStack" Style="{StaticResource resultStackStyle}" IsVisible="False">
                            <Label x:Name="sponsorshipIDValueLabel" FontSize="20"/>
                            <Button x:Name="sponsorshipIDEditButton" Text="[edit]" BackgroundColor="#FFFFFF" TextColor="#5C3838" FontSize="15" VerticalOptions="Center"/>
                        </StackLayout>
                        <Entry x:Name="sponsorshipIDEntry" Style="{StaticResource feildStyle}" IsVisible="False"/>

                        <!--Wingspan ID-->
                        <Label x:Name="sponsoredWingspanIDLabel" Text="Wingspan ID" Style="{StaticResource resultLabelStyle}" Grid.Row="1"/>
                        <StackLayout x:Name="sponsoredWingspanIDStack" Style="{StaticResource resultStackStyle}" IsVisible="False" Grid.Row="1">
                            <Label x:Name="sponsoredWingspanIDValueLabel" FontSize="20"/>
                            <Button x:Name="sponsoredWingspanIDEditButton" Text="[edit]" BackgroundColor="#FFFFFF" TextColor="#5C3838" FontSize="15" VerticalOptions="Center"/>
                        </StackLayout>
                        <Entry x:Name="sponsoredWingspanIDEntry" Style="{StaticResource feildStyle}" IsVisible="False" Grid.Row="1"/>

                        <!--Sponsorship category-->
                        <Label x:Name="editCategoryLabel" Text="Category" Style="{StaticResource resultLabelStyle}" Grid.Row="2"/>
                        <StackLayout x:Name="editCategoryStack" Style="{StaticResource resultStackStyle}" IsVisible="False" Grid.Row="2">
                            <Label x:Name="editCategoryValueLabel" FontSize="20"/>
                            <Button x:Name="editCategoryEditButton" Text="[edit]" BackgroundColor="#FFFFFF" TextColor="#5C3838" FontSize="15" VerticalOptions="Center"/>
                        </StackLayout>
                        <Picker x:Name="editCategoryPicker" Style="{StaticResource feildStyle}" Grid.Row="2" IsVisible="False">
                            <Picker.ItemsSource>
                                <x:Array Type="{x:Type x:String}">
                                    <x:String>Wild Bird</x:String>
                                    <x:String>Captive Bird (Absolute)</x:String>
                                    <x:String>Captive Bird (Gold)</x:String>
                                    <x:String>Captive Bird (Silver)</x:String>
                                    <x:String>Captive Bird (Bronze)</x:String>
                                </x:Array>
                            </Picker.ItemsSource>
                        </Picker>

                        <!--Sponsorship start date-->
                        <Label x:Name="editSponsorshipStartLabel" Text="Start date" Style="{StaticResource resultLabelStyle}" Grid.Row="3"/>
                        <StackLayout x:Name="editSponsorshipStartStack" Style="{StaticResource resultStackStyle}" IsVisible="False" Grid.Row="3">
                            <Label x:Name="editSponsorshipStartValueLabel" FontSize="20"/>
                            <Button x:Name="editSponsorshipStartEditButton" Text="[edit]" BackgroundColor="#FFFFFF" TextColor="#5C3838" FontSize="15" VerticalOptions="Center"/>
                        </StackLayout>
                        <DatePicker x:Name="editSponsorshipStartPicker" Style="{StaticResource feildStyle}" Grid.Row="3" IsVisible="False"/>

                        <!--Sponsorship end date-->
                        <Label x:Name="editSponsorshipEndLabel" Text="End date" Style="{StaticResource resultLabelStyle}" Grid.Row="4"/>
                        <StackLayout x:Name="editSponsorshipEndStack" Style="{StaticResource resultStackStyle}" IsVisible="False" Grid.Row="4">
                            <Label x:Name="editSponsorshipEndValueLabel" FontSize="20"/>
                            <Button x:Name="editSponsorshipEndEditButton" Text="[edit]" BackgroundColor="#FFFFFF" TextColor="#5C3838" FontSize="15" VerticalOptions="Center"/>
                        </StackLayout>
                        <DatePicker x:Name="editSponsorshipEndPicker" Style="{StaticResource feildStyle}" Grid.Row="4" IsVisible="False"/>

                        <!--Sponsor ID-->
                        <Label x:Name="editSponsorIDLabel" Text="Sponsor ID" Style="{StaticResource resultLabelStyle}" Grid.Row="5"/>
                        <StackLayout x:Name="editSponsorIDStack" Style="{StaticResource resultStackStyle}" IsVisible="False" Grid.Row="5">
                            <Label x:Name="editSponsorIDValueLabel" FontSize="20"/>
                            <Button x:Name="editSponsorIDEditButton" Text="[edit]" BackgroundColor="#FFFFFF" TextColor="#5C3838" FontSize="15" VerticalOptions="Center"/>
                        </StackLayout>
                        <Entry x:Name="editSponsorIDEntry" Style="{StaticResource feildStyle}" IsVisible="False" Grid.Row="5"/>

                        <!--Sponsor name-->
                        <Label x:Name="editSponsorNameLabel" Text="Sponsor name" Style="{StaticResource resultLabelStyle}" Grid.Row="6"/>
                        <StackLayout x:Name="editSponsorNameStack" Style="{StaticResource resultStackStyle}" IsVisible="False" Grid.Row="6">
                            <Label x:Name="editSponsorNameValueLabel" FontSize="20"/>
                            <Button x:Name="editSponsorNameEditButton" Text="[edit]" BackgroundColor="#FFFFFF" TextColor="#5C3838" FontSize="15" VerticalOptions="Center"/>
                        </StackLayout>
                        <Entry x:Name="editSponsorNameEntry" Style="{StaticResource feildStyle}" IsVisible="False" Grid.Row="6"/>


                        <!--buttons at the bottom-->
                        <StackLayout Orientation="Horizontal" Grid.Row="7" Grid.ColumnSpan="2">
                            <Button x:Name="deleteSponsorshipButton"
                                    Text="Delete" 
                                    Style="{StaticResource mainButtonStyle}" 
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    WidthRequest="150"
                                    Clicked="DeleteSponsorshipButton_Clicked"/>

                            <Button x:Name="saveSponsorshipChangesButton"
                                    Text="Save changes"
                                    Style="{StaticResource mainButtonStyle}"                                      
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    WidthRequest="150"
                                    Clicked="SaveSponsorshipChangesButton_Clicked"/>
                        </StackLayout>
                    </Grid>
                </ScrollView>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>